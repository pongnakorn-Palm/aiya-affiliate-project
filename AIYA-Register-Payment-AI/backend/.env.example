# NeonDB Connection
# Get your connection string from https://neon.tech
DATABASE_URL="postgresql://username:password@host/database?sslmode=require"

# AWS SES Configuration
# Get your credentials from AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-southeast-1

# Email Configuration
# Format: "Display Name <email@domain.com>"
SENDER_EMAIL="AIYA.AI <no-reply@aiya.ai>"

# LINE Notify Configuration
# Get your token from https://notify-bot.line.me/my/
# Leave empty to disable LINE notifications
LINE_NOTIFY_TOKEN=your_line_notify_token_here

# Server Configuration (Optional)
PORT=3000
